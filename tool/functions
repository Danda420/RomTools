	    echo "2. Mount without resizing"
	    echo "3. Mount read only"
	    echo "x. Back to main menu"
	    
	    read -p "" choose
	    case $choose in
	    
		1 ) 
	mount_resize
	restart_tool;;

		2 ) 
	mount_imgs "loop"
	restart_tool;;

		3 ) 
	mount_imgs "ro,nosuid,nodev,relatime,uhelper=udisks2,loop"
	restart_tool;;

		x ) 
	start_tools;;

		* ) mount_main;;
	    esac
	done
}

