payload_main() {
	while true; do
	    banner
	    echo " "
	    echo "1. Unpack all partitions in payload.bin"
	    echo "2. Unpack specific partition from payload.bin"
		echo "3. Compile payload.bin from raw images"
		echo "4. Compile payload.bin OTA.zip from raw images"
	    echo "x. Back to main menu"
	    
	    read -p "" choose
	    case $choose in
	    
		1 ) 
	payload_all
	restart_tool;;

		2 ) 
	payload_s_part
	restart_tool;;

		3 ) 
	payload_compile
	restart_tool;;

		4 ) 
	payload_compile_ota
	restart_tool;;

		x ) 
	start_tools;;

		* ) payload_main;;
	    esac
	done
}

start_tools() {
	setup
	while true; do
	    banner
	    echo " "
	    echo "0. Android Boot Image Editor"
	    echo "1. Super partition tools"
	    echo "2. Incremental dynamic partition tools"
	    echo "3. Convert or compress images"
	    echo "4. Unpack or repack images"
	    echo "5. Convert image types (ext4/f2fs/erofs)"
	    echo "6. Rebuild EXT4 Images (removes avb)"
	    echo "7. Mount or Umount raw imgs"
	    echo "8. Sparsechunk tools"
	    echo "9. payload.bin tools"
	    echo "10. Custom Scripts"
	    echo "11. Merge fs context and config to system"
	    echo "12. Zstd Tools"
	    echo "c. Clean up folders"
	    echo "i. Install proprietary packages"
	    echo "x. Exit tool"
	    
	    read -p "" choose
	    case $choose in
	    
		0 ) 
	androidbooteditor
	restart_tool;;

		1 ) 
	super_main
	restart_tool;;

		2 ) 
	inc_dynamic_main
	restart_tool;;

		3 ) 
	cd_cv_main
	restart_tool;;

		4 ) 
	unpack_repack_main
	restart_tool;;

		5 ) 
	convert_images_main
	restart_tool;;

		6 ) 
	rebuild_ext4_single
	restart_tool;;

		7 ) 
	mount_umount_main
	restart_tool;;
	
		8 )
	sparsechunk_main
	restart_tool;;

		9 ) 
	payload_main
	restart_tool;;

		10 ) 
	custom_scripts
	restart_tool;;

		11 ) 
	merge_main
	restart_tool;;
	
		12 ) 
	zstd_main
	restart_tool;;
	
		i ) 
	install_proprietary
	restart_tool;;

		c ) 
	clean
	restart_tool;;

		x )  
	clear	
	exit;;
		* ) start_tools;;
	    esac
	done
}
